<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Register">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="291dp"        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="254dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="207dp"
                android:layout_height="133dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:src="@drawable/waterdrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Register"
                android:textColor="#0D2C77"
                android:textSize="40sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="433dp"
        android:layout_gravity=""
        android:background="@android:color/primary_text_dark"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/B_name"
                android:layout_width="83dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:background="@drawable/pic"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/E_name"
                android:layout_width="327dp"
                android:layout_height="match_parent"
                android:hint="Name and Surname"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                android:textColor="#050505"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/B_student_no"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:background="@drawable/phone"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/E_student_no"
                android:layout_width="327dp"
                android:layout_height="match_parent"
                android:hint="Student number"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#050505"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/B_password"
                android:layout_width="76dp"
                android:layout_height="61dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:background="@drawable/sec"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/E_password"
                android:layout_width="327dp"
                android:layout_height="match_parent"
                android:hint="Student number"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#050505"
                android:textStyle="bold|italic" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/image_verify"
                android:layout_width="84dp"
                android:layout_height="match_parent"
                android:background="@drawable/third" />

            <EditText
                android:id="@+id/verify_editText"
                android:layout_width="327dp"
                android:layout_height="match_parent"
                android:hint="Verify Password"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                android:textColor="#050505"
                android:textStyle="bold|italic"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_email"
                android:layout_width="86dp"
                android:layout_height="match_parent"
                android:src="@drawable/at"

                ></ImageView>

            <EditText
                android:id="@+id/email_editText"
                android:layout_width="311dp"
                android:layout_height="match_parent"
                android:hint="Email"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"

                android:textColor="#050505"
                android:textStyle="bold|italic"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>