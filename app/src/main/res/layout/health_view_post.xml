<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#040D15"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginBottom="5dp"
            android:src="@drawable/overflowbackone"
            android:scaleType="fitXY"
            android:id="@+id/imageOfPost"
            android:layout_width="match_parent"
            android:layout_height="500dp"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#039BE5"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/nameOfUploader"
                android:layout_width="250dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_margin="5dp"
                        android:padding="7dp"
                        android:background="@drawable/circle_border"
                        android:src="@drawable/ic_person_outline_black_24dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp"/>

                    <TextView
                        android:id="@+id/nameOfPoster"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:text="Student Number."
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#8E8E8E"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp"
                android:layout_width="140dp"
                android:layout_height="45dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="30dp"
                        android:textSize="20dp"
                        android:text="Category"
                        android:id="@+id/nameOfCat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="#8E8E8E"
                    app:cardCornerRadius="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/nameOfHealthPost"
                        android:textColor="#000"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="ZULU MAN"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#226687"
                app:cardCornerRadius="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/nameOfHealthDescrip"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="ZULU MAN"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>


        </LinearLayout>



    </LinearLayout>

</ScrollView>