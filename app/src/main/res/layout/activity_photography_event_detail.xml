<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".photographyEventDetail">

    <ImageView
        android:id="@+id/imageToDisplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/overflowsix"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <ScrollView

        android:background="#9A423D3D"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageToDisplay2"
                android:scaleType="centerCrop"
                android:src="@drawable/overflowsix"
                android:layout_width="match_parent"
                android:layout_height="380dp"/>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp"
                android:layout_width="400dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.454"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.564">

                <LinearLayout
                    android:background="#7001579B"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/out_line_boarder"
                        android:padding="7dp"
                        android:layout_margin="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_person_outline_black_24dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>

                    <TextView
                        android:id="@+id/willBeStdNum"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="30dp"
                        android:layout_marginLeft="70dp"
                        android:text="Username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <ImageView
                        android:id="@+id/editPost"
                        android:background="@drawable/out_line_boarder"
                        android:padding="7dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="85dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_edit_comment_overflow"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:background="@drawable/out_line_boarder"
                    android:layout_margin="15dp"
                    android:padding="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_creatives_contact_img"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:text="Contatcts :"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/creativesContacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="7dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:background="@drawable/out_line_boarder"
                    android:layout_margin="15dp"
                    android:padding="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_creatives_location_img"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:text="Contatcts :"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/creativesLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="7dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:background="@drawable/out_line_boarder"
                    android:layout_margin="15dp"
                    android:padding="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_creatives_date_img"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:text="Contatcts :"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/creativesDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="7dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:background="@drawable/out_line_boarder"
                    android:layout_margin="15dp"
                    android:padding="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_creatives_time_img"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:text="Contatcts :"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/creativesTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="7dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="20dp"/>

            </LinearLayout>

            <TextView
                android:padding="7dp"
                android:background="@drawable/circle_border"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="35dp"
                android:text="DESCRIPTION"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/descriptionId"
                android:text="I am here for you"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20dp"/>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>