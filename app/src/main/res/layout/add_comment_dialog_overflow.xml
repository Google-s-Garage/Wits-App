<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#34648A"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/add_comment_dialog_cancel"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"/>

        <TextView
            android:text="Question"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>


        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_library_add_black_24dp"/>


        <EditText
            android:layout_marginTop="15dp"
            android:id="@+id/add_dialog_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write Comment Here"/>

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_comment_dialog_post_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/radius_corner_background"
                android:text="comment"
                android:textColor="#000"
                android:textStyle="bold"
                app:backgroundTint="@color/design_default_color_secondary"
                app:backgroundTintMode="src_atop"
                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:padding="10dp"
                        android:background="@drawable/tag_background_overflow"
                        android:text="SCIENCE"
                        android:textColor="#000"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/tag_background_overflow"
                        android:padding="10dp"
                        android:text="MATH"
                        android:textColor="#000" />

                    <TextView
                        android:padding="10dp"
                        android:background="@drawable/tag_background_overflow"
                        android:text="ARTS"
                        android:textColor="#000"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:padding="10dp"
                        android:background="@drawable/tag_background_overflow"
                        android:text="ACCOUNTING"
                        android:textColor="#000"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:padding="10dp"
                        android:background="@drawable/tag_background_overflow"
                        android:text="BIOLOGY"
                        android:textColor="#000"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:padding="10dp"
                        android:background="@drawable/tag_background_overflow"
                        android:text="LAW AND POLITICS"
                        android:textColor="#000"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

            </HorizontalScrollView>


        </LinearLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>